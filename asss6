#include <iostream>
#include <string>
using namespace std;

struct Node { 
    int prn;
    string name;
    Node* next;
};

// Add member at end
Node* addMember(Node* head, int prn, string name) {
    Node* temp = new Node{prn, name, NULL};
    if (!head) return temp;
    Node* p = head;
    while (p->next) p = p->next;
    p->next = temp;
    return head;
}

// Delete member by PRN
Node* deleteMember(Node* head, int prn) {
    if (!head) return NULL;
    if (head->prn == prn) { Node* t = head->next; delete head; return t; }
    Node* p = head;
    while (p->next && p->next->prn != prn) p = p->next;
    if (p->next) { Node* t = p->next; p->next = t->next; delete t; }
    return head;
}

// Count members
int countMembers(Node* head) {
    int c = 0; while (head) { c++; head = head->next; } return c;
}

// Display members
void displayMembers(Node* head) {
    while (head) { cout << head->prn << " - " << head->name << endl; head = head->next; }
}

// Concatenate two lists
Node* concatenate(Node* head1, Node* head2) {
    if (!head1) return head2;
    Node* p = head1;
    while (p->next) p = p->next;
    p->next = head2;
    return head1;
}

int main() {
    Node *div1 = NULL, *div2 = NULL;
    int choice, prn;
    string name;

    while (true) {
        cout << "\n1.Add Div1 2.Add Div2 3.Delete Div1 4.Delete Div2 5.Display Div1 6.Display Div2 7.Count Div1 8.Count Div2 9.Concatenate 10.Exit\nChoice: ";
        cin >> choice;
        if (choice == 1) { cout << "PRN: "; cin >> prn; cout << "Name: "; cin >> name; div1 = addMember(div1, prn, name); }
        else if (choice == 2) { cout << "PRN: "; cin >> prn; cout << "Name: "; cin >> name; div2 = addMember(div2, prn, name); }
        else if (choice == 3) { cout << "PRN to delete: "; cin >> prn; div1 = deleteMember(div1, prn); }
        else if (choice == 4) { cout << "PRN to delete: "; cin >> prn; div2 = deleteMember(div2, prn); }
        else if (choice == 5) displayMembers(div1);
        else if (choice == 6) displayMembers(div2);
        else if (choice == 7) cout << "Total Div1: " << countMembers(div1) << endl;
        else if (choice == 8) cout << "Total Div2: " << countMembers(div2) << endl;
        else if (choice == 9) { div1 = concatenate(div1, div2); cout << "Lists concatenated.\n"; }
        else break;
    }
}

