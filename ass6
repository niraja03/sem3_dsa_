#include <iostream>
#include <string>
using namespace std;

struct Node {
    string prn;
    string name;
    Node* next;

    Node(string p, string n, Node* nxt = nullptr) {
        prn = p;
        name = n;
        next = nxt;
    }
};

class PinnacleClub {
    Node* head;

public:
    PinnacleClub() {
        head = nullptr;
    }

    void addPresident(string prn, string name) {
        if (head != nullptr) {
            cout << "President already exists!\n";
            return;
        }
        Node* temp = new Node(prn, name);
        head = temp;
        cout << "President added.\n";
    }

    void addSecretary(string prn, string name) {
        if (head == nullptr) {
            cout << "First add President.\n";
            return;
        }
        Node* temp = head;
        while (temp->next != nullptr) {
            temp = temp->next;
        }
        Node* sec = new Node(prn, name);
        temp->next = sec;
        cout << "Secretary added.\n";
    }

    void addMember(string prn, string name) {
        if (head == nullptr) {
            cout << "First add President.\n";
            return;
        }
        Node* temp = head;
        while (temp->next->next != nullptr) {
            temp = temp->next;
        }
        Node* member = new Node(prn, name, temp->next);
        temp->next = member;
        cout << "Member added.\n";
    }

    void deletePresident() {
        if (head == nullptr) {
            cout << "No President found.\n";
            return;
        }
        Node* temp = head;
        head = head->next;
        delete temp;
        cout << "President deleted.\n";
    }

    void deleteSecretary() {
        if (head == nullptr || head->next == nullptr) {
            cout << "No Secretary found.\n";
            return;
        }
        Node* temp = head;
        while (temp->next->next != nullptr) {
            temp = temp->next;
        }
        delete temp->next;
        temp->next = nullptr;
        cout << "Secretary deleted.\n";
    }

    void deleteMember(string prn) {
        if (head == nullptr || head->next == nullptr || head->next->next == nullptr) {
            cout << "No members found.\n";
            return;
        }
        Node* temp = head;
        while (temp->next != nullptr && temp->next->prn != prn) {
            temp = temp->next;
        }
        if (temp->next == nullptr) {
            cout << "Member not found.\n";
            return;
        }
        Node* del = temp->next;
        temp->next = del->next;
        delete del;
        cout << "Member deleted.\n";
    }

    void display() {
        if (head == nullptr) {
            cout << "No members in the club.\n";
            return;
        }
        Node* temp = head;
        cout << "\nClub Members:\n";
        while (temp != nullptr) {
            cout << temp->prn << " - " << temp->name << endl;
            temp = temp->next;
        }
    }

    int countMembers() {
        int count = 0;
        Node* temp = head;
        while (temp != nullptr) {
            count++;
            temp = temp->next;
        }
        return count;
    }

    void concatenate(PinnacleClub& other) {
        if (head == nullptr) {
            head = other.head;
            return;
        }
        Node* temp = head;
        while (temp->next != nullptr) {
            temp = temp->next;
        }
        temp->next = other.head;
        other.head = nullptr;
        cout << "Lists concatenated.\n";
    }
};

int main() {
    PinnacleClub divA, divB;
    int choice;
    string prn, name;

    do {
        cout << "\n--- Pinnacle Club Menu ---\n";
        cout << "1. Add President\n2. Add Secretary\n3. Add Member\n4. Delete President\n";
        cout << "5. Delete Secretary\n6. Delete Member\n7. Display Members\n";
        cout << "8. Count Members\n9. Concatenate Div A & Div B\n10. Exit\n";
        cout << "Enter choice: ";
        cin >> choice;

        switch (choice) {
        case 1:
            cout << "Enter PRN & Name: ";
            cin >> prn >> name;
            divA.addPresident(prn, name);
            break;
        case 2:
            cout << "Enter PRN & Name: ";
            cin >> prn >> name;
            divA.addSecretary(prn, name);
            break;
        case 3:
            cout << "Enter PRN & Name: ";
            cin >> prn >> name;
            divA.addMember(prn, name);
            break;
        case 4:
            divA.deletePresident();
            break;
        case 5:
            divA.deleteSecretary();
            break;
        case 6:
            cout << "Enter PRN of member to delete: ";
            cin >> prn;
            divA.deleteMember(prn);
            break;
        case 7:
            divA.display();
            break;
        case 8:
            cout << "Total Members: " << divA.countMembers() << endl;
            break;
        case 9:
            cout << "Enter Division B members (end with 0):\n";
            while (true) {
                cout << "Enter PRN (0 to stop): ";
                cin >> prn;
                if (prn == "0") break;
                cout << "Enter Name: ";
                cin >> name;
                divB.addMember(prn, name);
            }
            divA.concatenate(divB);
            break;
        case 10:
            cout << "Exiting...\n";
            break;
        default:
            cout << "Invalid choice.\n";
        }
    } while (choice != 10);

    return 0;
}
